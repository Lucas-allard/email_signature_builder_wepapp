{% extends 'base.html.twig' %}

{% block body %}
    <div class="container overflow-hidden">
        <div class="page-wrapper p-t-130 p-b-100 font-poppins">
            <div class="wrapper wrapper--w680">

                <div class="card card-4 bg-blue bg-gradient text-light">
                    <div class="text-primary">
                        <a href="{{ path('app_login') }}"
                           class="text-decoration-none text-light text-align-left w-100 d-inline-block px-2 py-3"><i
                                    class="fa-solid fa-arrow-left px-2"></i>Retour à la page de connexion</a>
                        <h3 class="card-title text-light px-5 pt-3">Réinitialisation de mot de passe</h3>

                    </div>
                    <div class="card-body">
                        <div class="row">
                            {{ form_start(resetForm) }}
                            <div class="col d-flex flex-row align-items-center ">
                                <div class="px-2">
                                    {{ form_label(resetForm.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                                </div>
                                <div class="px-2">
                                    {{ form_widget(resetForm.password, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="px-2">
                                    <button class="btn btn-light" type="submit">
                                        Envoyer
                                    </button>
                                </div>
                            </div>
                            {{ form_end(resetForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}