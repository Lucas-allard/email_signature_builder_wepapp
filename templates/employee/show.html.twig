                            <p style="font-family: 'Montserrat Regular', sans-serif; font-size: 11px; line-height:15px; margin:0; padding:0;">
                                <span style="margin-right: 2em">{{ employee.position }}</span>
                                <a href="{{ employee.linkedinUrl }}">
                                    <picture>
                                        <source srcset="https://mili-atlas.fr/wp-content/uploads/LinkedIn-1.png"
                                                media="(prefers-color-scheme: dark) ">
                                        <img style="width:20px; height:20px"
                                             src="https://mili-atlas.fr/wp-content/uploads/LinkedIn.png"
                                             alt="Profil linkedIn"></picture>
                                </a>
                            </p>

                            <hr width="220px" align="left" margin-right="20px">

                            <p style="font-family: 'Montserrat Regular', sans-serif; font-size: 11px; line-height:15px; margin:0; padding:0; ">
                                {{ employee.phoneNumber }}</p>
                            <p style="font-family: 'Montserrat Regular', sans-serif; font-size: 11px; line-height:11px; margin:3 0 5 0; padding:0;">
                                <a href="mailto:{{ employee.firstEmail }}"
                                   style="text-decoration:none;">{{ employee.firstEmail }}</a></p>
                            <p style="font-family: 'Montserrat Medium', sans-serif; font-size: 11px; line-height:11px; font-weight: bold; margin:0; padding:0;">
                                <a href="https://www.mili-atlas.fr" style="text-decoration: none;">www.mili-atlas.fr</a>
                            </p>
                        </td>
                    </tr>
                    <tr>
