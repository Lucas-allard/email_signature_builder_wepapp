{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <div class="container  page-wrapper overflow-hidden">
        <div class="d-flex justify-content-between align-items-center bg-blue text-primary p-3">
            <h3 class="table-title text-light">Signature Générateur</h3>
            <div class="p-2 w-50">
                <form class="form-outline" id="filterForm">
                    <input type="search" id="searchInput" class="form-control" placeholder="Rechercher un collaborateur"
                           aria-label="Search" />
                    <input type="hidden" id="searchDataList" data-list="{{ allEmployees|serialize(format = 'json')  }}">
                </form>
            </div>

            <div class="p-2">
                <a href="{{ path('app_employee_new') }}" class="btn btn-light"><i class="fa-solid fa-plus"></i> Ajouter
                    un collaborateur</a>
            </div>
        </div>
        {{ include('employee/_employee_table.html.twig') }}

    </div>

    {{ include('shared/_modal.html.twig') }}

{% endblock %}





